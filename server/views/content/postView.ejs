<div class="post">
    <div class="post__title">
        <span><%= title %></span>
    </div>
    <div class="post__information">
        <span class="post__information--date">
            <i class="fas fa-calendar-alt"></i>
            <%= date %>
        </span>
        <span class="post__information--author">
            <i class="fas fa-keyboard"></i>
            <%= author %>
        </span>
    </div>
    <div class="post__contents">
        <% if (img) { %>
        <img src="<%= img %>" alt="첨부 이미지" class="post__contents--img">
        <% } %>
        <span class="post__contents--description"><%= description %></span>
    </div>
    <div class="post__btns">
        <button class="post__btns--board" onclick="history.go(-1);"><i class="fas fa-chevron-left"></i>
            메인</button>
        <div>
            <button class="post__btns--update" onclick="location.href = '/post/<%= id %>/edit'"><i
                    class="fas fa-edit"></i>
                수정</button>
            <form action="/post/<%= id %>/delete?_method=DELETE" method="POST" name="delForm">
                <button class="post__btns--delete" onclick="confirmDelPost()"><i class="fas fa-trash-alt"></i>삭제
                </button>
            </form>
        </div>
    </div>
</div>