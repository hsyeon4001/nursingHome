<div class="join-form">
	<form action="/join" method="POST">
		<div>
			<label for="id" class="join-form__label">아이디</label>
			<input type="text" placeholder="아이디" name="id" id="id" />
		</div>
		<div>
			<label for="password" class="join-form__label">비밀번호</label>
			<input type="password" placeholder="비밀번호" name="password" id="password" class="join-form__password" />
		</div>
		<div>
			<label for="name" class="join-form__label">이름</label>
			<input type="text" placeholder="이름" name="name" id="name" />
		</div>
		<div>
			<label for="job" class="join-form__label">직무</label>
			<div class="join-form__job">
				<input type="radio" id="jobChoice1" name="job" value="social_worker" />
				<label for="jobChoice1">사회복지사</label>
				<input type="radio" id="jobChoice2" name="job" value="nutritionist" />
				<label for="jobChoice2">영양사</label>
				<input type="radio" id="jobChoice3" name="job" value="nurse" />
				<label for="jobChoice3">간호사</label>
			</div>
		</div>
		<div>
			<input type="submit" value="가입" />
		</div>
	</form>
</div>