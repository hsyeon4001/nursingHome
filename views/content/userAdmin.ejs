<div class="users-table">
    <div>
        <button onclick="location.href='/admin'"><i class="fas fa-home"></i> 메인</button>
        <table class="users-table__statics">
            <tr class="users-table__statics--columns">
                <th>총 가입자</th>
                <th>사회복지사</th>
                <th>영양사</th>
                <th>간호사</th>
            </tr>
            <tbody class="users-table__statics--datas">
                <td><%= count %></td>
                <td><%= jobs.socialWorker %></td>
                <td><%= jobs.nutritionist %></td>
                <td><%= jobs.nurse %></td>
            </tbody>
        </table>
    </div>
    <table class="users-table__table">
        <tr class="users-table__table--columns">
            <th>아이디</th>
            <th>이름</th>
            <th>직급</th>
            <th>가입일자</th>
            <th>등급</th>
            <th>등급변경</th>
            <th>탈퇴</th>
        </tr>
        <tbody class="users-table__table--datas">
            <% for (i = 0; i < users.length; i++) { %>
            <tr>
                <td><%= users[i].id %></td>
                <td><%= users[i].name %></td>
                <td><%= users[i].job %></td>
                <td><%= users[i].created_at %></td>
                <td><%= users[i].grade %></td>
                <td>
                    <form action="/admin/users/<%= users[i].id %>/edit?_method=PUT" method="POST"
                        class="users-table__table--grades">
                        <select name="grade">
                            <option value="" selected disabled>등급</option>
                            <option value="guest">손님</option>
                            <option value="staff">직원</option>
                            <option value="administrator">관리자</option>
                        </select>
                        <button type="submit">변경</button>
                    </form>
                </td>
                <td>
                    <form action="/admin/users/<%= users[i].id %>/delete?_method=DELETE" method="POST" name="delForm">
                        <button onclick="confirmDelUser()">탈퇴</button>
                    </form>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>